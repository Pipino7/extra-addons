<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="payment_provider_form" model="ir.ui.view">
            <field name="name">payment.provider.form.</field>
            <field name="model">payment.provider</field>
            <field name="inherit_id" ref="payment.payment_provider_form"/>
            <field name="arch" type="xml">
                <field name="available_country_ids" position="before">
                    <field name="currency_ids" widget="many2many_tags"/>
                    <field name="force_currency" />
                    <field name="force_currency_id" invisible="not force_currency" />
                </field>
            </field>
        </record>

    </data>
</odoo>
