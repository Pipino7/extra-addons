<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <!-- Cron Job: Verificar credenciales expiradas diariamente -->
        <record id="ir_cron_check_expired_credentials" model="ir.cron">
            <field name="name">Credenciales: Marcar Expiradas</field>
            <field name="model_id" ref="model_service_credentials"/>
            <field name="state">code</field>
            <field name="code">model.cron_check_expired_credentials()</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="doall">False</field>
            <field name="active">True</field>
            <field name="priority">5</field>
        </record>

        <!-- Cron Job OPCIONAL: Advertir sobre credenciales próximas a expirar -->
        <record id="ir_cron_warn_expiring_soon" model="ir.cron">
            <field name="name">Credenciales: Advertir Próximas a Expirar</field>
            <field name="model_id" ref="model_service_credentials"/>
            <field name="state">code</field>
            <field name="code">model.cron_warn_expiring_soon(days_before=7)</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="doall">False</field>
            <field name="active">False</field>
            <field name="priority">10</field>
        </record>

    </data>
</odoo>
