<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_provider_form_khipu" model="ir.ui.view">
          <field name="name">payment.provider.form.khipu</field>
          <field name="model">payment.provider</field>
          <field name="inherit_id" ref="payment.payment_provider_form"/>
          <field name="arch" type="xml">
    
            <!-- Inserta los campos en el bloque de credenciales -->
            <group name="provider_credentials" position="inside">nside">
              <group string="Khipu" invisible="code != 'khipu'">
                <field name="khipu_api_key" password="True" placeholder="x-api-key de Khipu"/>
                <field name="khipu_webhook_secret" password="True" placeholder="Secreto para verificar webhooks"/>
                <field name="khipu_sandbox_mode"/>
              </group>
            </group>
    
          </field>
        </record>

    </data>
</odoo>
